{
    "name": "libtpp",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "--name=libtpp"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "clangd.path": "/usr/bin/clangd-17",
                "clangd.arguments": ["--compile-commands-dir=build","--background-index"],
                "editor.suggestOnTriggerCharacters": true,
                "files.associations": {
                    "*.cpp2": "cpp",
                    "*.tpp": "cpp",
                    "*.ipp": "cpp",
                    "*.inl": "cpp"
                }
            },
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cmake-tools",
                "xaver.clang-format",
                "eamodio.gitlens",
                "jeff-hykin.better-cpp-syntax",
                "elazarcoh.cpp2-syntax"
            ]
        }
    },
    "mounts": [
        "source=${env:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
        "source=${env:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached"
    ],
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "remoteUser": "root"
}
